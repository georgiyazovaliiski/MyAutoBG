@model AutoPartsMVC.Models.Category

@{
    ViewBag.Title = "Edit";
}
<div class="middle">
    <h2>Edit</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Категория</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)
            @Html.HiddenFor(model => model.UrlName)
            @Html.HiddenFor(model => model.Type)

            <div class="form-group">
                <label class="control-label col-md-2">Име</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Име на английски</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.NameEN, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NameEN, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Категория</label>
                <div class="col-md-10">
                    <select name="SubCategoryId" id="CategoryId" class="form-control"></select>
                    <label class="form-control warning">Провери внимателно в коя категория ще бъде преместено след редакция!!!</label>
                    @Html.ValidationMessageFor(model => model.SubCategoryId, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</div>
<script src="~/Scripts/crudCategories.js"></script>