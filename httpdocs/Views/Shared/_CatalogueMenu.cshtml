@model IEnumerable<AutoPartsMVC.Models.Category>

@foreach (var cat in Model)
{
    if (cat.SubCategoryId == 0)
    {
        if (cat.Type.Equals("Primary"))
        {
            <a style="background:#bc6514" href="@Url.Action("Category", "Catalogue", new { id = cat.UrlName })" class="list-group-item">@cat.Name</a>
        }
        else
        {
            <a href="#category-@cat.Id" class="list-group-item d-inline-block collapsed" data-toggle="collapse" data-parent="#sidebar" aria-expanded="false"><i class="fa fa-dashboard"></i> <span class="d-inline-block d-md-inline">@cat.Name</span> </a>

            <div class="collapse" id="category-@cat.Id">
                @Html.Action("SubCategories", "Shared", new { upperCategory = cat.Id })
            </div>
        }
    }
}
