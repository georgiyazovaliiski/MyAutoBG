<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title | MyAutoBg</title>
    <meta name="Description" content="MyAutoBg е компания за авточасти и автоаксесоари, предлагаща най-добри цени и качество!" />
    <meta name="keywords" content="myautobg, myauto, автоаксесоари myautobg" />
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Content/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/vegas.css" rel="stylesheet">
    <!-- Custom styles for this template -->
    <link href="~/Content/heroic-features.css" rel="stylesheet">
    <link href="~/Content/animate.css" rel="stylesheet">
    <link href="~/Content/bottom-menu.css" rel="stylesheet">
    <!-- Custom styles for this template -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    @RenderSection("scripts", required: false)
</head>
<body>
