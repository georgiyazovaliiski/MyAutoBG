@model AutoPartsMVC.Models.Order
@{
    ViewBag.Title = AutoPartsMVC.Properties.Resources.CartFinishOrder;
}
<div class="container">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>@AutoPartsMVC.Properties.Resources.Order</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                <label class="control-label col-md-2">@AutoPartsMVC.Properties.Resources.Name</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">@AutoPartsMVC.Properties.Resources.LastName</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">@AutoPartsMVC.Properties.Resources.ContactAddress</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.ContactAddress, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ContactAddress, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">@AutoPartsMVC.Properties.Resources.PhoneNumber</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group">
                <label class="control-label col-md-2">@AutoPartsMVC.Properties.Resources.ToOffice</label>
                <div class="col-md-10">
                    <select name="addressType" class="form-control">
                        @if (Request.Cookies["LNG"] == null || Request.Cookies["LNG"].Value.Equals("bg"))
                        {
                            <option value="1">Еконт</option>
                            <option value="2">Speedy</option>
                            <option value="3">БГ Пощи</option>
                        }
                        else
                        {
                            <option value="4">Paypal</option>
                        }
                    </select>
                </div>
            </div>

            @if (Request.Cookies["LNG"] == null || Request.Cookies["LNG"].Value.Equals("bg"))
            {
                <div class="form-group">
                    <label class="control-label col-md-2">@AutoPartsMVC.Properties.Resources.OfficeAddress</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                    </div>
                </div>
            }

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="@AutoPartsMVC.Properties.Resources.CartFinishOrder" class="btn btn-default" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    @AutoPartsMVC.Properties.Resources.DeliveryTerms
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    @Html.CheckBox("termsAndConditionsAgreement", false) @AutoPartsMVC.Properties.Resources.IAgree <a href="@Url.Action("Index","Terms")">@AutoPartsMVC.Properties.Resources.Agreement</a>.
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    @Html.ActionLink("Прегледай поръчката отново", "Index", "Cart")
                </div>
            </div>
        </div>
    }

</div>