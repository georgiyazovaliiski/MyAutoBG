<h1>Поръчки в процес на обработка</h1>
<table class="table table-striped table-bordered table-list">
    <thead>
        <tr>
            <th>Номер на поръчката</th>
            <th>Име</th>
            <th>Телефон</th>
            <th>Адрес</th>
            <th>Дата на поръчката</th>
            <th>Дата на завършване</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var i in Model)
        {
            <tr>
                <td>@i.Id</td>
                <td>@i.Name</td>
                <td>@i.Phone</td>
                <td>@i.Address</td>
                <td>@i.DateOfOrderStart</td>
                <td>@i.DateOfOrderFinish</td>
                <td>
                    <a class="btn btn-primary" href="@Url.Action("Details","Orders",new { id = i.Id })">Детайли</a>
                </td>
            </tr>
        }
    </tbody>
</table>