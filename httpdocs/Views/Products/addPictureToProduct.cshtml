@model List<AutoPartsMVC.Models.Product>
    <div class="container">
    @using (Html.BeginForm("addPictureToProduct", "Products", FormMethod.Post,
                                                                      new { enctype = "multipart/form-data" }))
    {
        <div class="form-group">
            <input type="file" name="PictureName" class="form-control" />
        </div>
        <div class="form-group">
            <select name="ProductId" class="form-control">
                @foreach (var item in Model)
                {
                    <option value="@item.Id">@item.Name</option>
                }
            </select>
        </div>
            <input type="submit" class="btn btn-primary" value="Качи"/>
        
    }
</div>