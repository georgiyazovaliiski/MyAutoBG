@{
    ViewBag.Title = AutoPartsMVC.Properties.Resources.Home;
}
<div class="wrapper">
    <!-- Page Content -->
    <div class="container" id="home-page">
        <!-- Page Features -->
        <div class="row">
            <div class="col-md-9 primary-panel">
                <div class="row text-center" id="products">
                    @Html.Action("Promoes", "Shared")
                </div>
            </div>
            <div class="col-md-3 secondary-panel  animated fadeInRightBig">
                <div class="panel panel-primary">
                    <div class="panel-heading" id="submitHere">
                        <h1 class="product-header"><span>@AutoPartsMVC.Properties.Resources.SubmitPartsHere</span></h1><br>
                    </div>
                    <div class="panel-body">
                    
                    @using (Html.BeginForm("Index", "Home", FormMethod.Post,
                                                        new { enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()
                            <div class="form-group">
                                <input type="email" class="form-control" aria-describedby="emailHelp" placeholder="Email" name="Email">
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" aria-describedby="phoneHelp" placeholder="@AutoPartsMVC.Properties.Resources.PhoneNumber" name="PhoneNumber">
                                <small id="emailHelp" class="form-text">*@AutoPartsMVC.Properties.Resources.NeverGonnaUseYourData</small>
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" aria-describedby="nameHelp" placeholder="@AutoPartsMVC.Properties.Resources.Name" name="FirstName">
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" aria-describedby="nameHelp" placeholder="@AutoPartsMVC.Properties.Resources.FamilyName" name="LastName">
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" aria-describedby="nameHelp" placeholder="@AutoPartsMVC.Properties.Resources.Country" name="Country">
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" aria-describedby="nameHelp" placeholder="@AutoPartsMVC.Properties.Resources.City" name="City">
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="@AutoPartsMVC.Properties.Resources.ProductName" id="nameOfProductInput" name="Name">
                            </div>
                            <div class="form-group">
                                <textarea class="form-control" placeholder="@AutoPartsMVC.Properties.Resources.ProductDescription" id="descriptionInput" rows="3" name="Description"></textarea>
                            </div>
                            <div class="form-group">
                                <input type="number" class="form-control" step="0.01" id="nameInput" aria-describedby="nameHelp" placeholder="@AutoPartsMVC.Properties.Resources.Price" name="Price" min="1.00">
                            </div>
                            <div class="form-group">
                                <label for="Picture">@AutoPartsMVC.Properties.Resources.ProductPicture</label>
                                <input type="file" class="form-control-file" id="pictureInput" aria-describedby="fileHelp" name="ProductImage">
                                <small id="fileHelp" class="form-text text-muted"></small>
                            </div>
                            <button type="submit" style="width:100%" class="btn btn-primary">@AutoPartsMVC.Properties.Resources.Submit</button>
                    }
                    </div>
                </div><br>
                @Html.Action("SpecialOffers", "Shared")
            </div>

        </div>
    </div>
    <!-- /.row -->
</div>
<script src="~/Scripts/animateOnLoad.js"></script>